@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model BanHangAsp.Models.TLoaiSp

@{
    ViewData["Title"] = "SuaDanhMuc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa Danh Mục Sản Phẩm</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="SuaDanhMuc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaLoai" />

            <div class="form-group">
                <label asp-for="Loai" class="control-label">
                    Tên Loại
                </label>
                <input asp-for="Loai" class="form-control" />
                <span asp-validation-for="Loai" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Lưu</button>
        </form>
    </div>
</div>

